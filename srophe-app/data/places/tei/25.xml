                    <placeName xml:id="name25-8" xml:lang="en" source="#bib25-5">ʿAqrā</placeName>
                    <placeName xml:id="name25-9" xml:lang="en" source="#bib25-5">ʿEqrā</placeName>
                    <placeName xml:id="name25-10" xml:lang="ar" source="#bib25-6">العَقْر</placeName>
                    <desc xml:id="abstract-en-25" xml:lang="en">A town east of the Tigris and north of the Great Zab in northern Iraq.</desc>
                    <desc xml:lang="syr-Syrj">
                        <quote source="#bib25-2">ܩܶܠܥܳܐ ܕܰܒܛܘܪܐ ܕܡܘܨܠ. ܘܰܠܡܰܕܢܚܳܗ̇ ܡܰܪܕܶܐ ܬܪܶܝܢ ܝܰܘ̈ܡܝܢ ܡܶܬܝܰܕܥܳܐ ܗܘܳܬ ܥܰܩܪ ܚܘܡܰܝܕܝܗ. </quote>
                    </desc>
                    <desc xml:lang="ar">
                        <quote source="#bib25-3">قلعة من جبال الموصل شرقيها مرحلة يومين عنها تعرف بعقر الحميدية.</quote>
                    </desc>
                    <desc xml:lang="en">
                        <quote source="#bib25-4">a citadel two days journey north of Mosul. It is known as ʿAqr al-Ḥumaydiyya.</quote>
                    </desc>
                    <location type="gps" source="#bib25-1">
                        <geo>36.741389 43.893333</geo>
                    </location>
                    <location type="nested" source="#bib25-5">
                        <region ref="http://syriaca.org/place/776">Sapsāpā district</region>
                    </location>
                    <event type="attestation" xml:id="attestation25-1" notBefore="1224" notAfter="1228" source="#bib25-6" syriaca-computed-start="1224-01-01" syriaca-computed-end="1228-01-01">
                        <p xml:lang="en">Attestation of name <foreign xml:lang="ar">العَقْر</foreign> in the <title xml:lang="en" level="m">Muʿjam al-buldān</title> of <persName>Yāqūt al-Ḥamawī</persName>.</p>
                        <link target="#name25-10 #attestation25-1"/>
                    </event>
                    <state type="existence" from="1877" to="2013" syriaca-computed-end="2013-01-01" syriaca-computed-start="1877-01-01">
                        <precision match="@from" notAfter="1877" syriaca-computed-end="1877-01-01"/>
                        <precision match="@to" notBefore="2013" syriaca-computed-start="2013-01-01"/>
                    </state>
                    <note type="corrigenda">Moosa's English translation of Barsoum's description says "north" when it should be "east."</note>
                    <idno type="URI">http://syriaca.org/place/25</idno>
                    <idno type="URI">http://en.wikipedia.org/wiki/Aqrah</idno>
                    <bibl xml:id="bib25-1">
                        <title xml:lang="en">The Gorgias Encyclopedic Dictionary of the Syriac Heritage</title>
                        <ptr target="http://syriaca.org/bibl/1"/>
                        <citedRange unit="pp">18, 70, 92, 226, 443</citedRange>
                        <citedRange unit="maps">Map II C1, IV</citedRange>
                    </bibl>
                    <bibl xml:id="bib25-2">
                        <title xml:lang="syr">ܒܪ̈ܘܠܐ ܒܕܝܪ̈ܐ ܕܥܠ ܡܪܕܘܬ ܝܘܠܦܢ̈ܐ ܣܘܪ̈ܝܝܐ ܗܕܝܪ̈ܐ</title>
                        <ptr target="http://syriaca.org/bibl/3"/>
                        <citedRange unit="pp">559</citedRange>
                    </bibl>
                    <bibl xml:id="bib25-3">
                        <title xml:lang="ar">كتاب اللؤلؤ المنثور في تاريخ العلوم والأداب السريانية</title>
                        <ptr target="http://syriaca.org/bibl/2"/>
                        <citedRange unit="pp">517</citedRange>
                    </bibl>
                    <bibl xml:id="bib25-4">
