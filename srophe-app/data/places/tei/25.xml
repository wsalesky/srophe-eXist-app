                    <placeName xml:id="name25-3" xml:lang="syr-Syrj" source="#bib25-2">ܥܰܩܪ ܚܘܡܰܝܕܝܗ</placeName>
                    <placeName xml:id="name25-4" xml:lang="ar" source="#bib25-3">العقر</placeName>
                    <placeName xml:id="name25-5" xml:lang="ar" source="#bib25-3">عقر الحميدية</placeName>
                    <placeName xml:id="name25-6" xml:lang="en" source="#bib25-4">ʿAqr</placeName>
