            <listPlace>
                <place xml:id="place-63" type="settlement">
                    <placeName xml:id="name63-1" xml:lang="en" syriaca-tags="#syriaca-headword" source="#bib63-1 #bib63-4">Claudia</placeName>
                    <placeName xml:id="name63-2" xml:lang="en" source="#bib63-1">Qlaudia</placeName>
                    <placeName xml:id="name63-3" xml:lang="syr" syriaca-tags="#syriaca-headword">ܩܠܘܕܝܐ</placeName>
                    <placeName xml:id="name63-4" xml:lang="syr-Syrj" source="#bib63-2">ܩܠܰܘܕܺܝܰܐ</placeName>
                    <placeName xml:id="name63-5" xml:lang="ar" source="#bib63-3 #bib63-5">قلوذية</placeName>
                    <desc xml:id="abstract-en-63" xml:lang="en">A city southeast of Melitene.</desc>
                    <desc xml:lang="syr-Syrj">
                        <quote source="#bib63-2">ܚܶܣܢܳܐ ܕܩܰܪܝܒ ܗܘܐ ܠܡܺܝܠܝܛܝܢܝ ܐܶܣܬܚܦ ܘܰܗܦܰܟ ܒܢܳܝܗܝ ܚܰܣܢ ܒܰܪ ܩܚܛܒܗ ܫܢܰܬ 141 ܗܳܓܳܪܳܝܬܐ. ܘܫܰܚܠܦܗ ܠܰܐܬܪܐ ܒܰܫܡܗ. ܘܰܚܪܒ ܒܳܬܰܪ ܕܳܪܐ ܬܠܳܬܰܥܣܝܪܳܝܐ. </quote>
                    </desc>
                    <desc xml:lang="ar">
                        <quote source="#bib63-3">حصن كان بقرب ملطية هدم فاعاد بناءه الحسن بن قحطبة سنة 141 هـ وحوله بلدة باسمه خربت بعد القرن الثالث عشر.</quote>
                    </desc>
                    <desc xml:lang="en">
                        <quote source="#bib63-4">a citadel near Melitene, destroyed and rebuilt by al-Ḥasan Ibn Quḥṭuba in 141 A.H. Around the citadel was built a town bearing the same name, but it was laid to ruin after the thirteenth century.</quote>
                    </desc>
                    <location type="gps" source="#bib63-1">
                        <geo>38.1666666 38.6666666</geo>
                    </location>
                    <event type="attestation" xml:id="attestation63-1" notBefore="1224" notAfter="1228" source="#bib63-5" syriaca-computed-start="1224-01-01" syriaca-computed-end="1228-01-01">
                        <p xml:lang="en">Attestation of name <foreign xml:lang="ar">قلوذية</foreign> in the <title xml:lang="en" level="m">Muʿjam al-buldān</title> of <persName>Yāqūt al-Ḥamawī</persName>.</p>
                        <link target="#name63-5 #attestation63-1"/>
                    </event>
                    <state type="existence" from="0953" to="1235" syriaca-computed-end="1235-01-01" syriaca-computed-start="0953-01-01">
                        <precision match="@from" notAfter="0953" syriaca-computed-end="0953-01-01"/>
