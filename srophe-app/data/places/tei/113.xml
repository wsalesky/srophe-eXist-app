            <listPlace>
                <place xml:id="place-113" type="settlement">
                    <placeName xml:id="name113-1" xml:lang="en" syriaca-tags="#syriaca-headword" source="#bib113-1">Kfartuto</placeName>
                    <placeName xml:id="name113-2" xml:lang="syr" syriaca-tags="#syriaca-headword">ܟܦܪܬܘܬ</placeName>
                    <placeName xml:id="name113-3" xml:lang="syr-Syrj" source="#bib113-2">ܟܦܰܪܬܘܬ</placeName>
                    <placeName xml:id="name113-4" xml:lang="ar" source="#bib113-3">كفرتوث</placeName>
                    <placeName xml:id="name113-5" xml:lang="en" source="#bib113-4">Kafrtūt</placeName>
                    <placeName xml:id="name113-6" xml:lang="ar" source="#bib113-5">كفرتُوْثا</placeName>
                    <desc xml:id="abstract-en-113" xml:lang="en">A town of southwest of <placeName ref="http://syriaca.org/place/130">Mardin</placeName> and northeast of <placeName ref="http://syriaca.org/place/172">Reshʿayna</placeName>.</desc>
                    <desc xml:lang="syr-Syrj">
                        <quote source="#bib113-2">ܡܕܝܢܬܳܐ ܗܘܳܬ ܒܶܝܬ ܕܳܪܳܐ ܠܪܺܝܫܥܰܝܢܳܐ ܒܬܰܝܡܰܢ ܡܰܥܪܰܒ ܘܗܳܫܳܐ ܩܪܝ̣ܬܳܐ ܗܝ</quote>
                    </desc>
                    <desc xml:lang="ar">
                        <quote source="#bib113-3">مدينة كانت بين دارا ورأس عين في الجنوب الغربي من ماردين وهي الآن قرية.</quote>
                    </desc>
                    <desc xml:lang="en">
                        <quote source="#bib113-4">a town between Dara and Rish ʿAyna, southwest of Mardin; now only a village.</quote>
                    </desc>
                    <event type="attestation" xml:id="attestation113-1" notBefore="1224" notAfter="1228" source="#bib113-5" syriaca-computed-start="1224-01-01" syriaca-computed-end="1228-01-01">
                        <p xml:lang="en">Attestation of name <foreign xml:lang="ar">كفرتُوْثا</foreign> in the <title xml:lang="en" level="m">Muʿjam al-buldān</title> of <persName>Yāqūt al-Ḥamawī</persName>.</p>
                        <link target="#name113-6 #attestation113-1"/>
                    </event>
                    <state type="existence" from="0869" to="1943" syriaca-computed-end="1943-01-01" syriaca-computed-start="0869-01-01">
                        <precision match="@from" notAfter="0869" syriaca-computed-end="0869-01-01"/>
                        <precision match="@to" notBefore="1943" syriaca-computed-start="1943-01-01"/>
                    </state>
                    <idno type="URI">http://syriaca.org/place/113</idno>
                    <bibl xml:id="bib113-1">
                        <title xml:lang="en">The Gorgias Encyclopedic Dictionary of the Syriac Heritage</title>
                        <ptr target="http://syriaca.org/bibl/1"/>
                        <citedRange unit="pp">60, 267, 449</citedRange>
                        <citedRange unit="maps">Map II B1, III</citedRange>
                    </bibl>
                    <bibl xml:id="bib113-2">
